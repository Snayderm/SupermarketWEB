@page
@model SupermarketWEB.Pages.Sales.EditModel
@{
    ViewData["Title"] = "Edit Sale";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Sale.Id" />
            <div class="form-group">
                <label asp-for="Sale.CustomerName" class="control-label"></label>
                <input asp-for="Sale.CustomerName" class="form-control" />
                <span asp-validation-for="Sale.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sale.ProductId" class="control-label"></label>
                <select asp-for="Sale.ProductId" asp-items="@Model.ProductList" class="form-control"></select>
            </div>
           
            <div class="form-group">
                <label asp-for="Sale.Total" class="control-label"></label>
                <input asp-for="Sale.Total" class="form-control" />
                <span asp-validation-for="Sale.Total" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-page="./Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
} 