@page
@model SupermarketWEB.Pages.Providers.IndexModel
@{
    ViewData["Title"] = "Providers";
}

<h1>Providers</h1>

<p>
    <a asp-page="./Create" class="btn btn-success">Create new provider</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var provider in Model.Providers)
        {
            <tr>
                <td>@provider.Id</td>
                <td>@provider.Name</td>
                <td>@provider.Phone</td>
                <td>@provider.Email</td>
                <td>
                    <form method="post" asp-page-handler="delete" asp-route-id="@provider.Id">
                        <a asp-page="./Edit" asp-route-id="@provider.Id" class="btn btn-primary btn-sm">Edit</a>
                        <input type="submit" value="Delete" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this provider?');" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
